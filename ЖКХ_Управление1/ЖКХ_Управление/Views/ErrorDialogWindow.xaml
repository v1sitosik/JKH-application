<Window x:Class="ЖКХ_Управление.Views.ErrorDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ошибка"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="180" Width="400"
        Background="White"
        AllowsTransparency="True"
        BorderThickness="0">

    <Border Background="White" CornerRadius="10" BorderBrush="#E53935" BorderThickness="2">
        <StackPanel Margin="20">
            <TextBlock Text="⚠ Ошибка"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#E53935"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="MessageTextBlock"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Foreground="Black"
                       Margin="0,0,0,20"/>
            <Button Content="ОК"
                    Width="100"
                    Height="30"
                    Background="#E53935"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Border>
</Window>
