<Window x:Class="ЖКХ_Управление.WarningDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Предупреждение"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Background="White">
    <Border BorderBrush="#FFC107" BorderThickness="2" CornerRadius="8" Padding="20">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="⚠ Предупреждение"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#FFA000"
                       Margin="0 0 0 10"/>

            <!-- Сообщение -->
            <TextBlock x:Name="MessageText"
                       FontSize="14"
                       Foreground="Black"
                       TextWrapping="Wrap"
                       Margin="0 0 0 20"
                       Width="320"/>

            <!-- Кнопка -->
            <Button Content="ОК"
                    Width="100"
                    Height="35"
                    HorizontalAlignment="Center"
                    Background="#FFC107"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Border>
</Window>
