<Window x:Class="ЖКХ_Управление.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="450" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Border Margin="20" Background="White" CornerRadius="10" BorderBrush="#2196F3" BorderThickness="2">
        <StackPanel Margin="30" VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Заголовок -->
            <TextBlock Text="🔐 Вход в систему"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2196F3"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Логин -->
            <TextBlock Text="Логин" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox"
                     Width="280"
                     Height="35"
                     FontSize="14"
                     Padding="8"
                     Background="#F5F5F5"
                     BorderBrush="#DDD"
                     BorderThickness="1"
                     Margin="0,0,0,10"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         Width="280"
                         Height="35"
                         FontSize="14"
                         Padding="8"
                         Background="#F5F5F5"
                         BorderBrush="#DDD"
                         BorderThickness="1"
                         Margin="0,0,0,10"/>

            <!-- Ошибка -->
            <TextBlock x:Name="ErrorTextBlock"
                       FontSize="13"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,5,0,5"
                       Visibility="Collapsed"/>

            <!-- Кнопка входа -->
            <Button Content="Войти"
                    Width="120"
                    Height="36"
                    Background="#0078D7"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Click="LoginButton_Click"
                    Margin="0,20,0,20"
                    Cursor="Hand"/>
        </StackPanel>
    </Border>
</Window>
